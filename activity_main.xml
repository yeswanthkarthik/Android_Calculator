<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/grey"
        android:text="@string/z"
        android:textSize="40sp"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/clear"
        android:backgroundTint="@color/dblue"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="220dp"
        app:cornerRadius="20dp"
        android:onClick="clear"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/rem"
        android:backgroundTint="@color/dblue"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginStart="110dp"
        android:layout_marginTop="220dp"
        android:onClick="remin"
        />
    <Button
        android:id="@+id/bx"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/wrong"
        android:backgroundTint="@color/dblue"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="200dp"
        android:layout_marginTop="220dp"
        android:onClick="back"
        />
    <Button
        android:id="@+id/bd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/div"
        android:backgroundTint="@color/dblue"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginStart="290dp"
        android:layout_marginTop="220dp"
        android:onClick="div"
        />
    <Button
        android:id="@+id/b7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/sev"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:onClick="seven"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/eig"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="300dp"
        android:layout_marginStart="110dp"
        android:onClick="eight"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/nin"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="300dp"
        android:layout_marginStart="200dp"
        android:onClick="nin"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/mul"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dblue"
        android:layout_marginTop="300dp"
        android:layout_marginStart="290dp"
        android:onClick="multi"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/blue"
        android:text="@string/fr"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="380dp"
        android:onClick="four"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/blue"
        android:text="@string/fiv"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="110dp"
        android:layout_marginTop="380dp"
        android:onClick="five"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/blue"
        android:text="@string/six"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="200dp"
        android:layout_marginTop="380dp"
        android:onClick="six"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/min"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dblue"
        android:layout_marginTop="380dp"
        android:layout_marginStart="290dp"
        android:onClick="minus"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/one"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="460dp"
        android:layout_marginStart="20dp"
        android:onClick="one"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/two"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="460dp"
        android:layout_marginStart="110dp"
        android:onClick="two"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/thr"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="460dp"
        android:layout_marginStart="200dp"
        android:onClick="three"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/plu"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dblue"
        android:layout_marginTop="460dp"
        android:layout_marginStart="290dp"
        android:onClick="add"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/zs"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="540dp"
        android:layout_marginStart="20dp"
        android:onClick="zers"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/z"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="540dp"
        android:layout_marginStart="110dp"
        android:onClick="zer"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/poi"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="540dp"
        android:layout_marginStart="200dp"
        android:textAlignment="center"
        android:onClick="point"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/equal"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:backgroundTint="@color/dblue"
        android:layout_marginTop="540dp"
        android:layout_marginStart="290dp"
        android:onClick="equal"
        />
</RelativeLayout>